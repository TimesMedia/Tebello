@model Tebello.MimsWeb.Models.ContactRequest

@{
    ViewBag.Title = "Contact";
}

<!DOCTYPE html>

<html style="font-family:Arial;">
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="/Content/normalise.css">
    <title>Contact</title>
</head>
<body>
    <div style="margin-left: 1em">
        @using (Html.BeginForm())
        {
            <p style="font-family: Arial; margin:2em 0em 2em 1em; color:red; ">
                @ViewBag.Message
            </p>
            <table>
                <tr>
                    <td>
                        <div>
                            <h3>Address</h3>
                            <p>MIMS, a division of Arena Holdings (Pty) Ltd<br />16 Empire Road <br />Parktown <br />Johannesburg <br />2193</p>
                        </div>

                        <div>
                            <h3>Ri&euml;tte van der Merwe</h3>
                            <p><a href="mailto:vandermerwer@mims.co.za">vandermerwer@mims.co.za</a>&nbsp;</p>
                            <p>Tel: <a href="tel:0112805856">011 280 5856/9 / 011 280 5533 / 068 022 7581</a></p>
                            <p>Fax: <a href="tel:0866757910">086 675 7910</a></p>
                        </div>
                    </td>
                    <td>
                        <div>
                            <iframe style="margin-left:2em" src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d4257.766458597883!2d28.038820165392952!3d-26.18559793766059!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x93d86db2d672d7c9!2sTiso+Blackstar!5e0!3m2!1sen!2sza!4v1526976275994" frameborder="0" style="border-style: none; border-color: inherit; border-width: 0; width: 450px; float: right; height: 320px;"></iframe>
                        </div>

                    </td>
                </tr>

                <tr>
                    <td colspan="2" >
                        <fieldset  border="1" width="100%" height="200" >
                            <legend>Let us contact you</legend>
                            <table width="100%">
                                <tr height="50">
                                    <td>@Html.LabelFor(x => x.Name)</td>
                                    <td>@Html.EditorFor(x => x.Name)</td>
                                </tr>

                                <tr height="50">
                                    <td>@Html.LabelFor(x => x.ContactNumber)</td>
                                    <td>@Html.EditorFor(x => x.ContactNumber)</td>
                                </tr>

                                <tr height="50">
                                    <td>@Html.LabelFor(x => x.Message)</td>
                                    <td><input style="width:450px;height:30px;" id="Message" name="Message" type="text" value=""></td>
                                </tr>

                                <tr height="50">
                                    <td>  <button type="submit">Contact me</button></td>
                                </tr>
                            </table>
                        </fieldset>
                    </td>
                </tr>
            </table>
        }
    </div>
  
</body>
</html>
